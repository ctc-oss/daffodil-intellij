<idea-plugin>
    <id>org.apache.daffodil-intellij</id>
    <name>Daffodil for IntelliJ IDEA</name>
    <vendor email="wassj@ctc.com" url="https://github.com/ctc-oss/daffodil-intellij">https://github.com/ctc-oss/daffodil-intellij</vendor>

    <description><![CDATA[
    An IntelliJ IDEA plugin for Daffodil...<br>
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType implementationClass="org.apache.daffodil.intellij.language.DfdlFileType"
                  name="DFDL" language="dfdl" extensions="dfdl"/>

        <lang.syntaxHighlighterFactory language="dfdl"
                                       implementationClass="org.apache.daffodil.intellij.highlight.DfdlSyntaxHighlighterFactory"/>

    </extensions>
</idea-plugin>
